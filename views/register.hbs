<div class="container">
    <h1>User Information</h1>
    <div class="msg">{{msg}}</div>
    <div class="err" id="err">{{err}}</div>
    <form action="/users/register" method="POST">
        <input type="text" name="name" placeholder="name" class="form-control ad">
        <input type="email" name="email" placeholder="email" class="form-control ad">
        <input type="text" name="username" placeholder="username" class="form-control ad">
        <input type="password" name="password" class="form-control ad" id="pass" placeholder="password">
        <input type="password" name="password2" class="form-control ad" id="pass" placeholder="confirm password">
        <button type="submit" class="btn btn-success">Register</button>
    </form>
</div>